<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('template/head') %>
</head>
<body>
  <%- include('template/back_navbar') %>
  <section class="wrapper free-prize update">
    <div class="free-prize-content">
      <div class="free-prize-content-notice">
        <table class="table">
          <thead class="table-success">
            <tr>
              <th scope="col">獎項名稱</th>
              <th scope="col">獎項內容</th>
              <th scope="col">圖片網址</th>
              <th scope="col">獎項機率</th>
              <th scope="col" colspan="2">狀態</th>
            </tr>
          </thead>
          <tbody>
            <% prizes.forEach(function(prize) { %>
              <tr>
                <th scope="row"><%= prize.title %></th>
                <td><%= prize.content %></td>
                <td><%= prize.url %></td>
                <td><%= prize.probability %></td>
                <td>
                  <a class="post__action" href="/update_prizes/<%= prize.id %>">編輯</a>
                </td>
                <td>
                  <a class="post__action" href="/delete_prizes/<%= prize.id %>">刪除</a>
                </td>
              </tr>
            <% }) %>   
          </tbody>
        </table>
      </div>
    </div>
  </section>
  <%- include('template/footer') %>
</body>
</html>